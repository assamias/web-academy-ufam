{
  "compilerOptions": {
    "target": "ES6",                    
    "module": "ESNext",                 
    "rootDir": "src",                   
    "outDir": "dist",                   
    "strict": true,                     
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true                   
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
